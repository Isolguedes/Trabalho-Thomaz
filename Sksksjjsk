<script>
// Dados
const tipoTrancas=[
{name:"Nag√¥",valor:100,img:"https://i.imgur.com/qZs8t4b.jpg",duracao:1.5},
{name:"Box Braids Curto",valor:150,img:"https://i.imgur.com/8Kf1Uwl.jpg",duracao:4},
{name:"Box Braids Longo",valor:200,img:"https://i.imgur.com/HqQ5S0v.jpg",duracao:6},
{name:"Twist",valor:120,img:"https://i.imgur.com/3kMZR0x.jpg",duracao:3},
{name:"Knotless",valor:180,img:"https://i.imgur.com/8p0g0IH.jpg",duracao:5},
{name:"Chass√©",valor:80,img:"https://i.imgur.com/4l3d5rG.jpg",duracao:2}];

const tamanhos=[
{name:"Curto",valor:0,img:"https://i.imgur.com/7Q7Lr3r.jpg"},
{name:"M√©dio",valor:20,img:"https://i.imgur.com/QbM7s0u.jpg"},
{name:"Longo",valor:40,img:"https://i.imgur.com/mLOyG9h.jpg"},
{name:"Extra Longo",valor:60,img:"https://i.imgur.com/BlFv6r3.jpg"}];

let agendamentos=[];
let selectedTranca=null,selectedTamanho=null,selectedData=null,selectedHora=null,valorTotal=0;

// Criar op√ß√µes
function criarOpcoes(container,dados,isTamanho=false){
  dados.forEach(t=>{
    let div=document.createElement("div");
    div.className="image-option";
    div.innerHTML=`<img src="${t.img}"><div>${t.nome}</div><div class="value-tag">R$${t.valor}</div>`;
    div.addEventListener("click", ()=>{
      document.querySelectorAll(container+" .image-option").forEach(el=>el.classList.remove("selected"));
      div.classList.add("selected");
      if(isTamanho) selectedTamanho=t; else selectedTranca=t;
      calcularValor();
    });
    document.querySelector(container).appendChild(div);
  });
}
criarOpcoes("#tipoTrancaContainer",tipoTrancas);
criarOpcoes("#tamanhoContainer",tamanhos,true);

// Material e cores
const materialSelect=document.getElementById("material");
const corContainer=document.getElementById("corContainer");
materialSelect.addEventListener("change",()=>{
  if(materialSelect.value==="Trancista") corContainer.style.display="block";
  else {corContainer.style.display="none";document.getElementById("outraCorContainer").style.display="none";}
});
const coresSelect=document.getElementById("cores");
const outraCorContainer=document.getElementById("outraCorContainer");
coresSelect.addEventListener("change",()=>{
  if(coresSelect.value==="Outra") outraCorContainer.style.display="block";
  else outraCorContainer.style.display="none";
  calcularValor();
});

// Servi√ßo adicional
const servicoSelect=document.getElementById("servicoAdicional");
servicoSelect.addEventListener("change",calcularValor);

// Calcular valor
function calcularValor(){
  valorTotal=0;
  if(selectedTranca) valorTotal+=selectedTranca.valor;
  if(selectedTamanho) valorTotal+=selectedTamanho.valor;
  if(materialSelect.value==="Trancista") valorTotal+=50;
  if(servicoSelect.value!=="Nenhum") valorTotal+=30;
  document.getElementById("valorTotal").textContent=valorTotal;
}

// Calend√°rio
const openCalendarBtn=document.getElementById("openCalendarBtn");
const calendarContainer=document.getElementById("calendarContainer");
const calendar=document.getElementById("calendar");
const horariosDiv=document.getElementById("horarios");
openCalendarBtn.addEventListener("click",()=>{
  calendarContainer.style.display="block"; gerarCalendar();
});

function gerarCalendar(){
  calendar.innerHTML="";
  const hoje=new Date();
  for(let i=0;i<30;i++){
    let data=new Date();
    data.setDate(hoje.getDate()+i);
    let diaSemana=data.getDay();
    let diaDiv=document.createElement("div");
    diaDiv.className="day";
    let dataStr=data.toISOString().split('T')[0];
    if(diaSemana===1||diaSemana===2){diaDiv.classList.add("blocked");}
    else{diaDiv.classList.add("available"); diaDiv.addEventListener("click",()=>selecionarData(dataStr));}
    diaDiv.textContent=dataStr;
    calendar.appendChild(diaDiv);
  }
}

function selecionarData(data){
  selectedData=data;
  gerarHorarios(data);
}

function gerarHorarios(data){
  horariosDiv.innerHTML="";
  const horasDisponiveis=["08:00","10:00","12:00","14:00","16:00","18:00"];
  horasDisponiveis.forEach(h=>{
    let btn=document.createElement("button");
    btn.className="horario-btn";
    btn.textContent=h;
    if(agendamentos.find(a=>a.data===data && a.hora===h)){btn.classList.add("ocupado"); btn.disabled=true;}
    btn.addEventListener("click",()=>{
      document.querySelectorAll("#horarios .horario-btn").forEach(el=>el.classList.remove("selected"));
      btn.classList.add("selected");
      selectedHora=h;
    });
    horariosDiv.appendChild(btn);
  });
}

// Confirma√ß√£o
const confirmBtn=document.getElementById("confirmAgendamentoBtn");
confirmBtn.addEventListener("click",()=>{
  if(!selectedData || !selectedHora){alert("Escolha data e hor√°rio"); return;}
  if(!selectedTranca || !selectedTamanho){alert("Escolha tran√ßa e tamanho"); return;}
  if(!document.getElementById("foto").files.length){alert("Envie a foto do cabelo"); return;}
  const nome=document.getElementById("nome").value;
  const telefone=document.getElementById("telefone").value;
  agendamentos.push({nome,telefone,tranca:selectedTranca.nome,tamanho:selectedTamanho.nome,data:selectedData,hora:selectedHora,valor:valorTotal});
  const mensagem=`Ol√° ${nome}! Seu agendamento com nossa equipe foi confirmado para ${selectedTranca.nome} (${selectedTamanho.nome}) no dia ${selectedData} √†s ${selectedHora}. Valor: R$${valorTotal}. Aguardamos voc√™! üíú`;
  const whatsappUrl=`https://api.whatsapp.com/send?phone=553899
